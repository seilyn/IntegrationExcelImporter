<Window x:Class="IntegrationExcelImporter.Core.View.Windows.LoadingSpinner"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IntegrationExcelImporter.Core.View.Windows"
        mc:Ignorable="d"
        xmlns:fa="http://schemas.fontawesome.io/icons/"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Height="220" Width="200"
        WindowStyle="None">
    <Grid>
        <StackPanel Orientation="Vertical">
            <fa:FontAwesome Icon="Spinner" Spin="True" Foreground="#4d4d4f" Background="Transparent" FontSize="180" Height="180" Width="180"/>
            <Label Content="작업중입니다" FontSize="20px" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#4d4d4f"></Label>
        </StackPanel>
    </Grid>
</Window>
